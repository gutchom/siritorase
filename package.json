{
  "private": true,
  "name": "siritorase",
  "version": "0.1.0",
  "author": "gutchom",
  "engines": {
    "node": "^18.2.0",
    "npm": "^8.9.0"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:firebase": "firebase emulators:start --import=.cache --export-on-exit=.cache",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch",
    "lint": "run-s lint:*",
    "lint:css": "stylelint ./**/*.css",
    "lint:ts": "next lint",
    "fix": "run-s fix:*",
    "fix:css": "stylelint ./**/*.css --fix",
    "fix:ts": "next lint --fix",
    "count": "printf '\\e[36m\\n  This project has\\e[35m %s lines\\e[36m of source code!\\n\\n\\e[m' $(find . -name '*.html' -o -name '*.css' -o -name '*.ts' -o -name '*.tsx' | grep -v node_modules | xargs wc -l | tail -1 | awk '{print $1}')"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "firebase": "^9.19.1",
    "firebase-admin": "^11.6.0",
    "html-react-parser": "^3.0.15",
    "next": "13.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.8.0",
    "recoil": "^0.7.7",
    "reset-css": "^5.0.1",
    "twitter-api-v2": "^1.14.2",
    "twitter-text": "^3.1.0",
    "vis-data": "^7.1.6",
    "vis-network": "^9.1.6"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
